#!/usr/bin/env python
# -*- coding: utf-8 -*-

STORAGE = "<%= @storage %>"

BACKENDS = {
    <% for @name, @dsettings in @backends %>
    "<%= @name %>": {
        <% for @key, @value in @dsettings %>
        "<%= @key.upcase %>": <% if @value == "True" or @value == "False" %><%= @value %><% elsif @value.is_a?(String) %>"<%= @value %>"<% else %><%= @value %><% end %>,
        <% end %>
        },
    <% end %>
    }

STORAGE_SETTINGS = {
    <% for @name, @value in @storage_settings %>
    "<%= @name.upcase %>": <% if @value == "True" or @value == "False" %><%= @value %><% elsif @value.is_a?(String) %>"<%= @value %>"<% else %><%= @value %><% end %>,
    <% end %>
    }


USERS = [
    <% for @email in @users %>
    "<%= @email %>",
    <% end %>]

SECRET_KEY = "<%= @secret_key %>"

# http://public_key:secret_key@host.com

PROJECTS = {
    <% for @name, @project_key in @projects %>
    "<%= @name %>": "<%= @project_key %>",
    <% end %>
    }


cookie_secret = "<%= @cookie_secret %>"

site_title = "<%= @site_title %>"

TEMPLATE_DEBUG = False

ANONYMOUS_LOGIN = <% if @anonymous_login %>True<% else %>False<% end %>


PREFIX = "<%= @prefix %>"

HOME_AUTOREDIRECT = <% if @home_autoredirect %>True<% else %>False<% end %>
